import smtplib
from email.mime.text import MIMEText
from email.mime.multipart import MIMEMultipart
from email.mime.base import MIMEBase
from email import encoders


smtp_port = 587  # SMTP port for STARTTLS
smtp_server = "smtp.gmail.com"

email_from = "azeeshan20@gmail.com"
email_list = [ "shan.utilitarian@gmail.com","azeeshan20@gmail.com","azeeshan20@gmail.com"]

password = "xlff digd wwhn veiy"  # Note: Avoid storing passwords in plaintext for security reasons


subject = "Practice Email with attachment using python"



def send_emails(email_list):
    for person in email_list:


        # Make the body of the email
        body = """
        Dear Zeeshan,
        Wishing you a very Happy Birthday filled with joy, love, and wonderful moments! May this year bring
        you success, happiness, and good health. Have an amazing celebration!
        
        Warm regards,
        Mohammad Zeeshan
        """

        msg = MIMEMultipart()
        msg['From'] = email_from
        msg['TO'] = person 
        msg['Subject'] = subject

        # Attach the boby of the message
        msg.attach(MIMEText(body, 'Plain'))


        # Define the file to attach
        filename = r"C:\Users\hp\Desktop\Zeeshan\Twitter_to_tableau\List_of_largest_companies_in_US_by_revenue.xlsx"

        # Open the file in python as a binary
        attachment = open(filename, 'rb')

        # Encode as base 64
        attachment_package = MIMEBase('application', 'octet-stream')
        attachment_package.set_payload((attachment).read())
        encoders.encode_base64(attachment_package)
        attachment_package.add_header('Content-Disposition',"attachment; filename= " + filename)
        msg.attach(attachment_package)


        # Cast as string
        text = msg.as_string()

        # Connect with the server
        print("Conneting to server...")
        TIE_server = smtplib.SMTP(smtp_server,smtp_port)
        TIE_server.starttls()
        TIE_server.login(email_from, password )
        print("Successfully connected to server")

        # Send email to "person" as list is iterated
        print(f"Sending email to:  {person}...")
        TIE_server.sendmail(email_from, person, text)
        print(f"Email sent to: {person}")
        print()
        
    TIE_server.quit()

send_emails(email_list)
